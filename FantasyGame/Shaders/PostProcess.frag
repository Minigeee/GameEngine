#version 330 core

///////////////////////////////////////////////////////////////////////////////

///////////////////////////////////////////////////////////////////////////////

in vec2 TexCoord;

uniform sampler3D color;

out vec4 FragColor;

///////////////////////////////////////////////////////////////////////////////

///////////////////////////////////////////////////////////////////////////////

void main()
{
    vec3 result = texture(color, vec3(TexCoord, 0.5f)).rgb;

    FragColor = vec4(result, 1.0f);
    FragColor.rgb = pow(FragColor.rgb, vec3(1.0f / 2.2f));
}